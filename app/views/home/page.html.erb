<div class="jumbotron">
  <h1>Hello, world!</h1>
  <p>...</p>
  <%= link_to 'Create Profile', new_profile_path, class: "btn btn-danger btn-lg"%>
  <br>
  <br>
    <%= link_to 'Create Post', new_post_path, class: "btn btn-danger btn-lg"%>
    <br>
  <%= link_to 'sign out', destroy_user_session_path, method: :delete %>
</div>

<% @blogs.each do |blog| %>
  <div class="post">
    <%= image_tag(blog.profile.picture_url, :size => "40x40", class: "profile-pic") %>
    <%= link_to blog.profile.name %>
    <h1><%= blog.status %></h1>
    <p>city: <%= blog.profile.location %></p>
    <%= image_tag blog.attachments.first.image_url, class: "photo" %>
    <p><%= blog.created_at.strftime("%d %h") %></p>

    <% if current_user %>
      <%= link_to like_blog_path(blog), method: :put do %>
        <% if current_user.voted_as_when_voted_for(blog) == true %>
          <i class="fas fa-heart"></i>
        <% else %>
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
    <% else %>
      <%= "like" %>
    <% end %>
    <%= blog.votes_for.size %>
    <br>

    <p>comment</p>
  </div>
<% end %>
