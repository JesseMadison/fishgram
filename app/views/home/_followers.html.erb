<div class="followers">
  <h3>Suggestions:</h3>

  <table class="table">
    <!-- <thead>
      <tr>
        <th>profile name</th>
        <th>follow link</th>
        <th colspan="3"></th>
      </tr>
    </thead> -->

    <% current_user.followees.each do |followee|  %>
      <% followee.email %>
    <% end %>

    <tbody>
      <% @users.each do |user| %>
          <% if user.email != current_user.email%>
            <tr>
              <td><%= user.email %></td>
              <td><%= link_to 'follow', followings_path(:follower_id => user), method: :post %></td>
            </tr>
          <% end %>
        <% end %>
    </tbody>
  </table>

  <h3>Your subscriptions</h3>
  <table class="table">

  <tbody>
    <% current_user.followees.each do |followee|  %>
    <tr>
      <td><%=followee.email %></td>
      <td><%= link_to 'unfollow', following_path(followee), method: :delete %></td>
    <% end %>
    </tr>
  </tbody>
</table>

  <h3>Your followers</h3>
  <ul>
    <% current_user.followers.each do |follower|  %>
    <li><%=follower.email %></li>
    <% end %>
  </ul>
</div>
